include ../../node_modules/bemto.pug/bemto.pug

- set_bemto_settings({ prefix: { '': 'b-', 'js-': true, '-': false }, element: '__', modifier: '--', default_tag: 'div' })

block variables
- var requireJS = false

doctype html
html(lang="ru", class=htmlClass, data-theme-color='1', data-theme-style='normal')
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimal-ui, user-scalable=no")
        meta(name="skype_toolbar", content="skype_toolbar_parser_compatible")
        meta(name="format-detection" content="telephone=no")
        meta(name="theme-color" content="#111011")
        meta(name="msapplication-navbutton-color" content="#111011")
        meta(name="apple-mobile-web-app-status-bar-style" content="dark")

        meta(name="msapplication-TileColor", content="#ff7a20")
        meta(name="theme-color", content="#ffffff")
        <meta property="og:image:width" content="1351">
        <meta property="og:image:height" content="707">

        link(rel="apple-touch-icon", sizes="180x180", href="images/favicon/apple-touch-icon.png")
        link(rel="icon", type="image/png", sizes="32x32", href="images/favicon/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16", href="images/favicon/favicon-16x16.png")
        link(rel="manifest", href="images/favicon/site.webmanifest")
        link(rel="mask-icon", href="images/favicon/safari-pinned-tab.svg", color="#000000")
        
        block styles
            link(href="css/main.css?" + new Date().getTime() rel="stylesheet")
        <link href="https://fonts.googleapis.com/css?family=Comfortaa:300,400,700|Didact+Gothic&amp;subset=cyrillic-ext" rel="stylesheet">

        // page settings
        block head
        title= pageTitle || ''
        meta(name='description' content=pageDescription || '')

        <!--[if lte IE 9]>
        script(src="js/html5shiv/html5shiv.min.js")
        <![endif]-->
    body
        block content
        block popup

        
        script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
        script(src="js/external.js")
        script(src="js/internal.js")
